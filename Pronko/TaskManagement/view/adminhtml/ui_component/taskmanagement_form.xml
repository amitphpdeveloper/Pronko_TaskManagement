<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">taskmanagement_form.taskmanagement_form_data_source</item>
			<item name="deps" xsi:type="string">taskmanagement_form.taskmanagement_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">General Information</item>
		<item name="config" xsi:type="array">
			<item name="dataScope" xsi:type="string">data</item>
			<item name="namespace" xsi:type="string">taskmanagement_form</item>
		</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
		<item name="buttons" xsi:type="array">
			<item name="back" xsi:type="string">Pronko\TaskManagement\Block\Adminhtml\TaskManagement\Edit\BackButton</item>
			<item name="delete" xsi:type="string">Pronko\TaskManagement\Block\Adminhtml\TaskManagement\Edit\DeleteButton</item>
			<item name="save" xsi:type="string">Pronko\TaskManagement\Block\Adminhtml\TaskManagement\Edit\SaveButton</item>
			
		</item>
	</argument>
	<dataSource name="taskmanagement_form_data_source">
		<argument name="dataProvider" xsi:type="configurableObject">
			<argument name="class" xsi:type="string">Pronko\TaskManagement\Model\TaskManagement\DataProvider</argument>
			<argument name="name" xsi:type="string">taskmanagement_form_data_source</argument>
			<argument name="primaryFieldName" xsi:type="string">task_id</argument>
			<argument name="requestFieldName" xsi:type="string">task_id</argument>
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="submit_url" path="*/*/save" xsi:type="url"/>
				</item>
			</argument>
		</argument>
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
	</dataSource>
	<fieldset name="General">
		<argument name="data" xsi:type="array">
			<item name="config" xsi:type="array">
				<item name="label" xsi:type="string"/>
			</item>
		</argument>
		<field name="task_name">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="label" translate="true" xsi:type="string">Task Name</item>
					<item name="formElement" xsi:type="string">textarea</item>
					<item name="source" xsi:type="string">TaskManagement</item>
					<item name="sortOrder" xsi:type="number">20</item>
					<item name="dataScope" xsi:type="string">task_name</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">false</item>
					</item>
				</item>
			</argument>
		</field>
		<field name="task_description">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="label" translate="true" xsi:type="string">Task Description</item>
					<item name="formElement" xsi:type="string">textarea</item>
					<item name="source" xsi:type="string">TaskManagement</item>
					<item name="sortOrder" xsi:type="number">30</item>
					<item name="dataScope" xsi:type="string">task_description</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">false</item>
					</item>
				</item>
			</argument>
		</field>
		<field name="start_time">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="label" translate="true" xsi:type="string">Start Time</item>
					<item name="formElement" xsi:type="string">date</item>
					<item name="source" xsi:type="string">TaskManagement</item>
					<item name="sortOrder" xsi:type="number">40</item>
					<item name="dataScope" xsi:type="string">start_time</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">false</item>
					</item>
					<item name="options" xsi:type="array">
						<item name="dateFormat" xsi:type="string">yyyy-MM-dd</item>
						<item name="timeFormat" xsi:type="string">HH:mm:ss</item>
						<item name="showsTime" xsi:type="boolean">true</item>
					</item>
				</item>
			</argument>
		</field>
		<field name="end_time">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="label" translate="true" xsi:type="string">End Time</item>
					<item name="formElement" xsi:type="string">date</item>
					<item name="source" xsi:type="string">TaskManagement</item>
					<item name="sortOrder" xsi:type="number">50</item>
					<item name="dataScope" xsi:type="string">end_time</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">false</item>
					</item>
					<item name="options" xsi:type="array">
                <item name="dateFormat" xsi:type="string">yyyy-MM-dd</item>
                <item name="timeFormat" xsi:type="string">HH:mm:ss</item>
                <item name="showsTime" xsi:type="boolean">true</item>
            </item>
				</item>
			</argument>
		</field>
		<field name="assigned_person">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="label" translate="true" xsi:type="string">Assigned Person</item>
					<item name="formElement" xsi:type="string">textarea</item>
					<item name="source" xsi:type="string">TaskManagement</item>
					<item name="sortOrder" xsi:type="number">60</item>
					<item name="dataScope" xsi:type="string">assigned_person</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">false</item>
					</item>
				</item>
			</argument>
		</field>
		<field name="status">
			<argument name="data" xsi:type="array">
			    <item name="options" xsi:type="object">Pronko\TaskManagement\Model\Source\Status</item>
				<item name="config" xsi:type="array">
					<item name="label" translate="true" xsi:type="string">status</item>
				    <item name="formElement" xsi:type="string">select</item>
					<item name="source" xsi:type="string">TaskManagement</item>
					<item name="sortOrder" xsi:type="number">70</item>
					<item name="dataScope" xsi:type="string">status</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">true</item>
					</item>
				</item>
			</argument>
		</field>
	</fieldset>
</form>
